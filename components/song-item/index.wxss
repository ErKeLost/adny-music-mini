.item {
  display: flex;
  align-items: center;
  margin: 36rpx 0 10rpx;
}
.index {
  font-size: 30rpx;
  padding: 12rpx;
  width: 50rpx;
  height: 100%;
  text-align: center;
}
.info {
  flex: 1;
  margin-left: 16rpx;
}
.name {
  font-size: 30rpx;
}
.source {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}
.icon {
  width: 38rpx;
  height: 22rpx;
  margin-right: 10rpx;
}